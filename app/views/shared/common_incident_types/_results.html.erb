<div data-classify-target="loader">
  <%= render "shared/turbo_loader" %>
</div>
<% if common_incident_types.any? %>
  <div  class="loading-hide">
    <div data-classify-target="hideOnSelect" class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-8 mb-24">
      <div data-incident-id="unknown" data-classify-target="incidentTypeCard" class="bg-white border-gray-200 shadow rounded p-8">
        <div class="w-100 flex justify-center mb-4">
          <svg width="30" height="30" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="text-xl font-bold pb-3 text-center">Unable to map call type</div>
        <div class="text-sm text-gray-600 pb-2 text-center mb-3">An appropriate common incident type cannot be mapped.</div>
        <div class="flex flex-grow justify-center">
          <button data-action="click->classify#submitUnknown" class="button-orange h-12 self-center">
            Select
          </button>
        </div>
      </div>
      <% common_incident_types.each do |common_incident_type| %>
        <%= render 'shared/common_incident_types/card', common_incident_type: common_incident_type %>
      <% end %>
    </div>
  </div>
<% elsif defined?(show_unknown) && show_unknown %>
  <div  class="loading-hide">
    <div data-classify-target="hideOnSelect" class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-8 mb-24">
      <div data-incident-id="unknown" data-classify-target="incidentTypeCard" class="bg-white border-gray-200 shadow rounded p-8">
        <div class="w-100 flex justify-center mb-4">
          <svg width="30" height="30" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="text-xl font-bold pb-3 text-center">Unable to map call type</div>
        <div class="text-sm text-gray-600 pb-2 text-center mb-3">An appropriate common incident type cannot be mapped.</div>
        <div class="flex flex-grow justify-center">
          <button data-action="click->classify#submitUnknown" class="button-orange h-12 self-center">
            Select
          </button>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center mb-16 loading-hide">
    <div class="flex justify-center mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>
    <div class="text-2xl font-bold text-gray-500 mb-3">Search above to populate results</div>
    <div class=" flex justify-center content-center">
      <div class="text-base text-gray-500 w-80">Results will auto-populate with relevant incident types.</div>
    </div>
  </div>
<% end %>
