<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
  <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
    <div class="ml-4 mt-4">
      <h3 class="text-lg leading-6 font-medium text-gray-900"><%= title %></h3>
      <p class="mt-1 text-sm text-gray-500">
        <%= description %>
      </p>
    </div>
    <div class="ml-4 mt-4 flex-shrink-0">
      <% if defined? button %>
       <%= button_to button[:label], button[:path], method: button[:method] || :get, class: "relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
    </div>
  </div>
</div>
