<h2 class="modal-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
  <div class="form-group">
    <div class="my-4">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= render "shared/input_error", resource: resource, field: :email %>
    </div>

    <div class="my-4">
      <%= f.submit "Send me reset password instructions", class: "w-full justify-center" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
