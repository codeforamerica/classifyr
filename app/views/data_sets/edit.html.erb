<div class="w-full">
  <%= render 'shared/header',
    title: "Edit #{@data_set.title}",
    description: "Make updates to this existing dataset.  Note: file updates will be added shortly.",
    buttons: [
      { label: "Edit Mappings", href: map_data_set_path(@data_set) }
    ]
  %>
  <div class="responsive-container">
    <div class="my-12 px-4 py-5 sm:px-6">
      <div id="data_sets" class="header">
        <%= render "form", data_set: @data_set %>
        <%= link_to 'Cancel', data_sets_path, class: "ml-2 bg-gray-100 inline-block px-6 py-2.5 font-medium text-xs leading-tight uppercase rounded shadow-md focus:shadow-lg focus:outline-none focus:ring-0 transition duration-150 ease-in-out" %>
      </div>
    </div>
  </div>
</div>
