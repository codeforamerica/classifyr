<div class="w-full">
  <%= render 'shared/header',
    title: "Datasets",
    description: "List of the public data sets uploaded by Code for America's National Action Team.",
    links: [],
    buttons: [
      { label: 'Upload Dataset', href: new_data_set_path }
    ]
  %>
  <div class="responsive-container">
    <div class="mt-12 py-5">
      <section class="px-6 pb-6 bg-white">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Timeframe</th>
                <th scope="col">Files</th>
                <th scope="col">Rows</th>
                <th scope="col">Fields</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @data_sets.each do |data_set| %>
                <tr class="row">
                  <td>
                    <%= link_to data_set.title, data_set %>
                  </td>
                  <td><%= location(data_set) %></td>
                  <td><%= data_set.timeframe %></td>
                  <td>
                    <% data_set.files.each do |file| %>
                      <%= file.filename %>
                      <br>
                    <% end %>
                  </td>
                  <td>
                    <%= data_set.row_count %>
                  </td>
                  <td>
                    <%= data_set.datafile.headers ? data_set.files.first.headers.split(',').count : 0 %>
                  </td>
                  <td>
                    <div class="inline-block ml-2">
                      <%= link_to edit_data_set_path(data_set), class: 'inline-block', title: 'Edit Dataset' do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <%= link_to map_data_set_path(data_set), class: 'inline-block', title: 'Edit Dataset' do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                        </svg>
                      <% end %>
                      <%= link_to data_set_path(data_set), class: 'inline-block ml-1', title: 'Delete Dataset', data: {"turbo-confirm": "Are you sure you want to delete this data set?", "turbo-method": :delete } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
