<div class="w-full">
  <%= render 'shared/header',
      title: "Dashboard",
      description: "Manage, view and export your datasets and classifications from the dashboards screen.",
      links: [
        { name: "Datasets", href: "#" },
        { name: "Call Type Mapping", href: "#", selected: true }
      ]
  %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="mt-12 px-4 py-5 sm:px-6">
      <div class="overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-auto">
            <thead>
              <tr>
                <th scope="col" class="text-xs">
                  Detailed Call Type
                </th>
                <th scope="col" class="text-xs">
                  Common Incident Type
                </th>
                <th scope="col" class="text-xs">
                  Classifier
                </th>
              </tr>
            </thead>
            <tbody>
              <% @call_type_maps.each do |classification| %>
                <tr>
                  <td>
                    <% if classification.unknown? %>
                      <i>
                        <%= classification.value %>
                      </i>
                    <% else %>
                      <%= classification.value %>
                    <% end %>
                  </td>
                  <td>
                    <% if classification.unknown? %>
                      <i>
                        UNKNOWN
                      </i>
                    <% else %>
                      <%= link_to classification.common_incident_type&.code, '#', title: classification.common_incident_type&.notes || classification.common_incident_type&.description %>
                    <% end %>
                  </td>
                  <td>
                    <% if classification.unknown? %>
                      <i>
                        Mike C
                      </i>
                    <% else %>
                      Mike C
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
