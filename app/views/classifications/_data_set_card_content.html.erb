<div data-data-set-slug="<%= data_set.slug %>" class="<%= completed_card_class(data_set) %> p-6 border-gray-200 shadow rounded">
  <div class="flex flex-row mb-4">
    <div class="data-set-title grow text-gray-500 font-medium line-clamp-1"><%= data_set.title %></div>
    <% if data_set.completed? %>
      <div class="mr-2 font-semibold text-green-500">
        COMPLETED
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% elsif authorized?(:create, :classifications) %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
  <div class="text-4xl text-black font-bold mb-4">
    <%= data_set.completion_percent %>%
  </div>
  <div class="mb-3">
    <div class="w-full rounded bg-gray-100 h-1">
      <div class="bg-purple-600 rounded h-1" style="width: <%= data_set.completion_percent %>%"></div>
    </div>
  </div>
  <div class="text-xs text-gray-400">
    <%= data_set.completed_unique_values %>/<%= data_set.total_unique_values %> complete
  </div>
</div>
