<div data-select-incident-type-target="selectedFormContainer" class="hidden mb-24">
  <%= form_with(url: "#", data: { controller: "selected-incident-form", turbo_frame: "results" }) do |f|  %>
    <%= f.hidden_field :common_incident_type_id, data: { select_incident_type_target: "incidentTypeId" } %>
    <%= f.hidden_field :confidence_rating %>
    <div class="flex">
      <div data-select-incident-type-target="selectedIncident" class="w-1/3">
      </div>
      <div class="w-2/3 pl-12">
        <h5 class="text-2xl font-bold mb-2">
          Assign a confidence rating
        </h5>
        <label class="text-base mb-6">
          How confident are you in your selection?
        </label>
        <%= f.select :confidence_rating, [
          ["Low Confidence", 0],
          ["Somewhat Confident", 1],
          ["Very Confident", 2]
        ], {
          prompt: "Select Confidence Rating"
        }, {
          class: "w-80 text-gray-500 text-base mb-12"
        } %>
        <p class="text-base mb-4 text-black">Describe your reasoning (optional)</p>
        <%= f.text_area :confidence_reasoning, placeholder: "Start typing here", class: "mb-6 w-96 h-24" %>
        <%= f.submit value: 'Submit', class: 'button' %>
      </div>
    </div>
  <% end %>
</div>
